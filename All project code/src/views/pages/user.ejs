<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>


    <% if (locals.message) { %>
        <div
          class="alert alert-<%- locals.error ? 'danger' : 'success' %>"
          role="alert">
          <%= message %>
        </div>
        <% } %>

<head>
        <h1>Profile</h1>
        </head>


<body>
  <div id="user" class="container">
           

                <h2>
                    <ul style = "list-style: none;" >
                        <div class="mb-3">
                            <li>   
                                <b>Username:</b>
                                <h4><%= data[0].username %></h4>
                            </li>
                        </div>
                        <div class="mb-3">
                            <li>
                                <b>Age:</b> 
                                <h4><%= data[0].user_age %></h4>
                            </li>
                        </div>
                        <div class="mb-3">
                            <li>
                                <b>Location:</b>
                                <h4><%= data[0].user_location %></h4>
                            </li>
                        </div>
                        <div class="mb-3">
                            <li>
                                <b>Favorite Book:</b>
                                <h4><%= data[0].favorite_book %></h4>
                            </li>
                        </div>
                        <div class="mb-3">
                            <li>
                                <b>About Me:</b>
                                <h3><%= data[0].about %></h3>
                                <br>
                                <br>
                            </li>
                        </div>
                    </ul>   

                </h2>

                <p2>            
                    <div class="mb-3">
                        <a href="/changeProfile">
                        <button type="submit" class="btn btn-primary" >Edit Profile</button>
                    </div>
                </p2>
</div>
</body>


